<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <link rel="stylesheet" href="style.css" />
  <style>
    body {
      background-image: url("/img/bg3.jpg");
      background-attachment: fixed;
      background-position: 10%;
      background-size: cover;
    }
  </style>
  <body>
    <%- include('./partials/nav.ejs') %>
    <!-- Form -->
    <form action="/report" method="post">
      <div class="container-form">
        <div class="form text-light">
          <div class="mb-3">
            <label for="first-name" class="form-label">First Name</label>
            <input
              type="text"
              class="form-control"
              placeholder="first name"
              name="firstName"
              required
            />
          </div>
          <div class="mb-3">
            <label for="last-name" class="form-label">Last Name</label>
            <input
              type="text"
              class="form-control"
              placeholder="last name"
              name="lastName"
              required
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              placeholder="email address"
              name="email"
              required
            />
          </div>
          <div class="mb-3">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <input type="text" class="form-control" placeholder="phone number" name="phoneNumber"/>
          </div>
          <div class="mb-3">
            <label for="university" class="form-label">University</label>
            <div class="input-group mb-3">
              <label class="input-group-text" for="inputGroupSelect01">University</label>
              <select class="form-select" id="inputGroupSelect01" required name="university">
                <option value="КФУ">Kazan State University (КФУ)</option>
                <option value="КНИТУ-КХТИ">Kazan National Technical Research University (КНИТУ-КХТИ)</option>
                <option value="КГМУ">Kazan State Medical University (КГМУ)</option>
                <option value="КНИТУ-КАИ">Kazan Aviation Institute (КНИТУ-КАИ)</option>
                <option value="КазГИК">Kazan State University Of Culture And Arts (КазГИК)</option>
                <option value="КГСУ">Kazan State University Of Architecture And Engineering (КГСУ)</option>
                <option value="КГЭУ">Kazan State Power Engineering University (КГЭУ)</option>
                <option value="Innopolis University">Innopolis University</option>
              </select>
          </div>
          <div class="mb-3">
            <label for="major" class="form-label">Major</label>
            <input
              type="text"
              class="form-control"
              placeholder="major"
              name="major"
              required
            />
          </div>
          <div class="mb-3">
            <label for="passportNumber" class="form-label">Passport Number</label>
            <input
              type="text"
              class="form-control"
              placeholder="passport number"
              name="passportNumber"
              required
            />
          </div>
          <label for="year" class="form-label">Year</label>
          <div class="input-group mb-3">
            <label class="input-group-text" for="inputGroupSelect01">Year</label>
            <select class="form-select" id="inputGroupSelect01" required name="year">
              <option selected>Preparation</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
            </select>
          </div>
          <input class="btn btn-primary" type="submit" value="Submit" />
        </div>
      </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
  </body>
</html>
