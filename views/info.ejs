<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <link rel="stylesheet" href="style.css" />
  <style>
    body {
      background-image: url("/img/data-table.jpg");
      background-attachment: fixed;
      padding-top: 0;
    }
  </style>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container-report">
      <h1 class="text-center text-light">PERMIKAZ</h1>
      <% if (data.length === 0) { %>
        <div class="alert alert-danger" role="alert">
          There is no data available
        </div>
      <% } else { %> 
      <table class="table text-light">
        <thead class="table-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">University</th>
            <th scope="col">Major</th>
            <th scope="col">Year</th>
            <th scope="col" class="success"></th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% for( let i = 0; i < data.length; i++ ) { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= data[i].first_name %></td>
            <td><%= data[i].last_name %></td>
            <td><%= data[i].university %></td>
            <td><%= data[i].major %></td>
            <td><%= data[i].year %></td>
            <td><a href="/info/detail/<%= data[i].uuid %>"><button type="button" class="btn btn-success badge" action="/detail">Details</button></a></td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <% } %> 
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
  </body>
  </body>
</html>
